extends blocks/layout
block vars

block append head
    title Şifremi Unuttum
block append svg

block content
    .maincontainer
        .device-container
            .safearea
                .loginarea-image.forgotpassword
                    .loginarea-image-title Şifremi Unuttum
                .loginarea-form.forgotpassword
                    p.mb-3.d-block
                        | Şifrenizi yenilemek için aşağıdaki formu doldurunuz.
                    .input-wrapper.password
                        i.icon-lock.input-icon
                        input.input(type="password",placeholder="Şifre")
                        .password-see(onclick="togglePassSee()")
                            i.icon-eye-close
                            i.icon-eye
                    .input-wrapper.password
                        i.icon-lock.input-icon
                        input.input(type="password",placeholder="Şifre Tekrar")
                        .password-see(onclick="togglePassSee()")
                            i.icon-eye-close
                            i.icon-eye
                    .button.button-red.mt-3 Şifremi Yenile

                    .loginarea-text.mt-3
                        span Şifreni hatıladın mı?
                        a(href="#") Hemen Giriş Yap





